{
  "manifest_version": 2,
  "name": "Color Changer",
  "version": "1.0.2",
	"description": "Change website colors to your liking.",

  "icons": {
    "48": "icons/icon.svg"
	},
  "content_scripts": [
    {
			"run_at": "document_idle",
      "matches": ["<all_urls>"],
			"js": ["cc.js"]
    }
	],
	"background": {"scripts": ["background.js"]},
	"permissions": ["storage", "tabs", "activeTab", "contextMenus"],
  "browser_action": {
		"browser_style": true,
    "default_popup": "popup/cc_popup.html",
    "default_icon": {
      "16": "icons/icon-128.png"
    }
	}
}
